---
const buttons = [7, 8, 9, "DEL", 4, 5, 6, "+", 1, 2, 3, "-", ".", 0, "/", "x"];
---

<div class="calc-btns-container">
    <div class="calc-top">
        {
            buttons.map((button) => {
                if (button === "DEL") {
                    return <button class="del">{button}</button>;
                } else {
                    return <button>{button}</button>;
                }
            })
        }
    </div>
    <div class="calc-bottom">
        <button class="reset">reset</button>
        <button class="calculate">=</button>
    </div>
</div>
